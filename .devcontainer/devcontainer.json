// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Firedrake",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "fem",

	"runArgs" : [
		"--gpus=all",
		"--shm-size=1g",
		"--ulimit=memlock=-1",
		"--ulimit=stack=67108864",
		"--runtime=nvidia"
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter"
			],
		"settings" : {
			"python.pythonPath": "/home/firedrake/firedrake/bin/python",
			"python.defaultInterpreterPath": "/home/firedrake/firedrake/bin/python"
		}
		}
	},

	"postCreateCommand": "pip install torch torchvision torchaudio torch_geometric pyg_lib torch_scatter torch_sparse torch_cluster torch_spline_conv rioxarray xarray rasterio pandamesh dem_stitcher tensorboardX -f https://data.pyg.org/whl/torch-2.2.0+cu121.html meshio"
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
